// Items specific to the interactive application.

#risk_checker {
  position: relative;
  #modal-target {
    position: absolute;
    z-index: 1050;
  }
}

.splash-screen {
  text-align: center;
  .station-ident{
    #em .padding(18, 16);
    #gradient .linear(#535353, #666666, #343434);
    .station-ident-inner {
      padding: 1em 0;
      #gradient .linear(#000000, #454545, #000000);
      img {
        min-width: 37px;
      }
    }
  }
}

.post-splash {
  display: none;
}

.introduction {
  text-align: center;
  .footer-image {
    display: block;
    margin: auto;
  }
  .disclaimer {
    font-size: 0.85em;
  }
  h1 {
    text-align: center;
  }
  .large-text {
    margin-bottom: 1em;
  }
}

.progress {
  clear: both;
  overflow: hidden;
  display: inline-block;
  .progress-caption {
    float: left;
  }
  ol {
    list-style-type: none;
    float: left;
    margin: 0;
    padding: 0;
    li {
      float: left;
      font-size: 1.5em;
      line-height: 0.85em;
      color: @lightest-accessible;
    }
  }
  .current {
    color: @highlight;
  }
}

.question {
  text-align: center;
  margin: auto;
  max-width: 40em;
  margin-top: 2em;
  h1 {
    color: @heading-text;
    font-weight: bold;
  }
  .answers {
    margin-top: 2em;
  }
  .why-asked {
    margin-top: 2em;
  }
  .why-answer {
    display: none;
  }
  .question-list {
    text-align: left;
    display: inline-block;
    padding-left: 1em;
    margin-bottom: 0;
  }
}

.risk-level {
  background-image: url(/img/risk-level_bg-narrow.png);
  background-repeat: no-repeat;
  background-position: center top;
  padding-top: 3em;
  h1, h2, h3, h4, h5, h6 {
    color: @highlight;
  }
  .content {
    background-color: @background;
    padding: 1em;
  }
}

.risk-checker {
  text-align: center;
}

.oldie .risk-level {
  background-image: url(/img/risk-level_bg.png);
}
