// As we're dealing with an image here this is all in absolute dimensions.

.sprite {
  background-image: url(/img/sprite.png);
  background-repeat: no-repeat;
}
span.sprite {
  display: block;
}

.menu-toggle {
  background-position: -10px -26px;
  padding-left: 16px;
  margin-top: 0.18em;
}

.menu-back {
  background-position: -10px -75px;
  display: block;
  height: 31px;
  width: 56px;
  .menu-back-text {
    font-size: 13px;
    left: 14px;
    position: relative;
    top: 5px;
  }
}

span.external-icon {
  display: inline-block;
  height: 16px;
  width: 16px;
  background-position: -10px -135px;
  margin-left: 0.25em;
}
.btn .sprite {
  display: none !important;
}
